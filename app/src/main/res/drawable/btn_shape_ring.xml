<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="200dp"/>

            <gradient
                android:angle="0"
                android:endColor="#ffffa000"
                android:startColor="#ffffa000"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:radius="200dp"/>

            <gradient
                android:angle="0"
                android:endColor="#ffffa000"
                android:startColor="#ffffa000"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="200dp"/>

            <gradient
                android:angle="0"
                android:endColor="#ffff5000"
                android:startColor="#ffff9000"/>

        </shape>
    </item>
</selector>