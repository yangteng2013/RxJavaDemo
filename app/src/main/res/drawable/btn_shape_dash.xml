<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <!-- 实心 -->
            <solid android:color="#ffff0000"/>
            <!-- 渐变 -->
            <gradient
                android:angle="0"
                android:endColor="#ffffa000"
                android:startColor="#ffffa000"/>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="#ffff0000"
                android:dashGap="3dp"
                android:dashWidth="5dp"/>
            <!-- 圆角 -->
            <corners
                android:radius="2dp"/>

            <padding android:bottom="5dp"
                     android:left="5dp"
                     android:right="5dp"
                     android:top="5dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient
                android:angle="0"
                android:endColor="#ffffa000"
                android:startColor="#ffffa000"/>
            <stroke
                android:width="1dp"
                android:color="#ffff0000"
                android:dashGap="3dp"
                android:dashWidth="5dp"/>
            <corners
                android:radius="2dp"/>

            <padding android:bottom="5dp"
                     android:left="5dp"
                     android:right="5dp"
                     android:top="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="#ff5100"
                android:dashGap="3dp"
                android:dashWidth="5dp"/>

            <corners android:radius="2dp"/>

            <gradient
                android:angle="0"
                android:endColor="#ffff5000"
                android:startColor="#ffff9000"/>

            <padding android:bottom="5dp"
                     android:left="5dp"
                     android:right="5dp"
                     android:top="5dp"/>

        </shape>
    </item>
</selector>